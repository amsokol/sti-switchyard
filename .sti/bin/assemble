#!/bin/bash -e
#
# S2I assemble script for the 'sti-switchyard' image.
# The 'assemble' script builds your application source ready to run.
#
# For more information refer to the documentation:
#	https://github.com/openshift/source-to-image/blob/master/docs/builder_image.md
#

if [ "$1" = "-h" ]; then
	# If the 'sti-switchyard' assemble script is executed with '-h' flag,
	# print the usage.
	exec /usr/local/sti/usage
fi

# Restore artifacts from the previous build (if they exist).
#
if [ "$(ls /tmp/artifacts/ 2>/dev/null)" ]; then
  echo "---> Restoring build artifacts"
  mv /tmp/artifacts/. ./
fi

echo "---> Installing application source"
cp -Rf /opt/s2i/destination/src/. ./

echo "---> Building application from source"
# Add build steps for your application, eg npm install, bundle install
mvn clean package
mv ./target/*.jar $JBOSS_HOME/standalone/deployments/
